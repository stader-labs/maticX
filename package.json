{
	"name": "MaticX",
	"version": "0.1.0",
	"description": "MaticX contracts",
	"scripts": {
		"prepare": "husky",
		"format:sol": "prettier --write 'contracts/**/*.sol'",
		"format:ts": "prettier --write 'scripts/**/*.ts' 'test/**/*.ts'",
		"lint": "eslint --ext .js,.ts .",
		"compile": "hardhat compile",
		"check": "hardhat check",
		"test": "hardhat test --bail",
		"test:ci": "hardhat test --parallel",
		"cover": "rimraf coverage && hardhat coverage",
		"gas": "cross-env REPORT_GAS=true npm run test",
		"size": "hardhat size-contracts",
		"analyze": "slither .",
		"analyze:ci": "slither . --skip-clean --ignore-compile",
		"clean": "hardhat clean && rimraf coverage cache crytic-{corpus,export} mochaOutput.json testMatrix.json",
		"node": "hardat node",
		"deploy:main": "cross-env NODE_ENV=main hardhat run ./scripts/deploy.ts --network mainnet",
		"deploy:test": "cross-env NODE_ENV=test hardhat run ./scripts/deploy.ts --network testnet",
		"upgrade:main": "cross-env NODE_ENV=main hardhat run ./scripts/upgradeMaticX.ts --network mainnet",
		"verify:main": "cross-env NODE_ENV=main hardhat verifyMaticX --network mainnet"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/stader-labs/maticX"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/stader-labs/maticX/issues"
	},
	"homepage": "https://github.com/stader-labs/maticX#readme",
	"engines": {
		"node": "^20.9.0",
		"npm": ">=10.2.0"
	},
	"type": "commonjs",
	"devDependencies": {
		"@nomicfoundation/hardhat-network-helpers": "^1.0.11",
		"@nomiclabs/hardhat-ethers": "^2.0.2",
		"@nomiclabs/hardhat-etherscan": "^3.1.8",
		"@nomiclabs/hardhat-solhint": "^4.0.0",
		"@nomiclabs/hardhat-waffle": "^2.0.1",
		"@openzeppelin/contracts": "^4.3.1",
		"@openzeppelin/contracts-upgradeable": "^4.3.2",
		"@openzeppelin/hardhat-defender": "^1.6.0",
		"@openzeppelin/hardhat-upgrades": "^1.10.0",
		"@typechain/ethers-v5": "^8.0.5",
		"@typechain/hardhat": "^3.1.0",
		"@types/chai": "^4.2.21",
		"@types/mocha": "^10.0.7",
		"@types/node": "^22.5.4",
		"@typescript-eslint/eslint-plugin": "^4.32.0",
		"@typescript-eslint/parser": "^4.32.0",
		"chai": "^4.3.4",
		"cross-env": "^7.0.3",
		"dotenv": "^16.4.5",
		"eslint": "^7.32.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-promise": "^5.1.0",
		"ethereum-waffle": "^4.0.10",
		"ethers": "^5.4.6",
		"hardhat": "^2.6.4",
		"hardhat-contract-sizer": "^2.5.1",
		"hardhat-gas-reporter": "^2.2.1",
		"husky": "^9.1.5",
		"joi": "^17.13.3",
		"prettier": "^3.3.3",
		"prettier-plugin-solidity": "^1.4.1",
		"rimraf": "^6.0.1",
		"solc": "^0.8.27",
		"solhint": "^5.0.3",
		"solidity-coverage": "^0.8.13",
		"ts-node": "^10.2.1",
		"typechain": "^6.1.0",
		"typescript": "^5.5.4"
	}
}
